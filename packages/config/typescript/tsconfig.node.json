{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node16",
        "target": "ESNext",
        "checkJs": true,

        "forceConsistentCasingInFileNames": true,

        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,

        "strict": true,
        "preserveWatchOutput": true
    }
}